---
import Default from "@astrojs/starlight/components/MarkdownContent.astro";
import type { StarlightRouteData } from '@astrojs/starlight/route-data';
import BlogPostMetadata from "./BlogPostMetadata.astro";

const isBlogPost =
    Astro.locals.starlightRoute.id.includes("blog") && !Astro.locals.starlightRoute.id.includes("index");
---

<Default {...Astro.locals.starlightRoute as StarlightRouteData}>
    <slot />
    {
        isBlogPost && (
            <BlogPostMetadata {...(Astro.locals.starlightRoute as StarlightRouteData)} />
        )
    }
</Default>
